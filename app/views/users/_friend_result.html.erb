<div class="results-block">
    <%= render  'layouts/msg' %>
</div>


<% if @friends %>
    <div class="card card-header results-block">
        <table class="col-md-12">
            <tbody>
                <% @friends.each do |friend| %>
                    <tr>
                        <td><strong>Name:</strong> <%= friend.full_name %></td>
                        <td><strong>Email:</strong> <%= friend.email %></td>
                        <td><strong>Profile:</strong> <%= link_to "Viwe Profile", "#", class: "btn btn-xs btn-success" %>
                        <%= link_to  "Follow friend", "#", class: "btn btn-xs btn-success", method: :post %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>